{
  "name": "lunik-torrent",
  "version": "3.0.12",
  "description": "Web torrent client with directory storage",
  "author": "Guillaume Lunik <guillaume.lunik@gmail.com>",
  "scripts": {
    "postinstall": "scripts/init.sh && bower install --allow-root && gulp build",
    "build": "gulp build",
    "start": "node build/index.js",
    "dev": "gulp build && npm start",
    "deamon": "forever -a start src/index.js",
    "test": "istanbul cover _mocha -- -R spec test/*"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lunik/Lunik-Torrent"
  },
  "dependencies": {
    "allocine-api": "^0.1.9",
    "body-parser": "^1.16.1",
    "bower": "^1.8.0",
    "cheerio": "^0.22.0",
    "cloudscraper": "^1.4.1",
    "colors": "^1.1.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "crypto-js": "^3.1.8",
    "crypto-rand": "^0.0.2",
    "express": "^4.15.0",
    "forever": "^0.15.3",
    "fs-extra": "^2.1.2",
    "klaw": "^1.3.1",
    "nedb": "^1.8.0",
    "webtorrent": "^0.98.14",
    "request": "^2.80.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "chai": "^3.5.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-bower": "0.0.13",
    "gulp-clean": "^0.3.2",
    "gulp-csso": "^3.0.0",
    "gulp-less": "^3.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-uglify": "^2.1.2",
    "gulp-watch": "^4.3.11",
    "istanbul": "^0.4.5",
    "merge-stream": "^1.0.1",
    "mocha": "^3.2.0"
  },
  "standard": {
    "ignore": [
      "require.js"
    ],
    "globals": [
      "__base",
      "__config",
      "__DBtoken",
      "__workingDir",
      "$",
      "confirm",
      "prompt",
      "requirejs",
      "Storage",
      "App"
    ]
  }
}
