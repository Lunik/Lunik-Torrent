{
  "name": "lunik-torrent",
  "version": "2.20.5",
  "description": "Web torrent client with directory storage",
  "author": "Guillaume Lunik <guillaume.lunik@gmail.com",
  "scripts": {
    "postinstall": "scripts/init.sh && bower install --allow-root",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js -w src/worker/ -w src/controller --ignore src/public",
    "deamon": "forever -a start src/index.js",
    "test": "istanbul cover _mocha -- -R spec test/*"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lunik/Lunik-Torrent"
  },
  "dependencies": {
    "allocine-api": "^0.1.9",
    "body-parser": "^1.15.2",
    "bower": "^1.7.9",
    "colors": "^1.1.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cpasbien-api": "^1.1.1",
    "crypto-js": "^3.1.7",
    "crypto-rand": "0.0.2",
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "fs-extra": "^1.0.0",
    "nedb": "^1.8.0",
    "webtorrent": "^0.97.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.4",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.0",
    "request": "^2.74.0"
  },
  "standard": {
    "ignore": [
      "require.js"
    ],
    "globals": [
      "$",
      "confirm",
      "prompt",
      "requirejs",
      "Storage",
      "App"
    ]
  }
}
