{
  "name": "lunik-torrent",
  "version": "3.2.5",
  "description": "Web torrent client with directory storage",
  "author": "Guillaume Lunik <guillaume.lunik@gmail.com>",
  "scripts": {
    "postinstall": "scripts/init.sh && bower install --allow-root",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js -w src/ --ignore src/public",
    "deamon": "forever -a start src/index.js",
    "test": "istanbul cover _mocha -- -R spec test/*"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lunik/Lunik-Torrent"
  },
  "dependencies": {
    "allocine-api": "^0.1.9",
    "body-parser": "^1.17.1",
    "bower": "^1.8.0",
    "cheerio": "^0.22.0",
    "cloudscraper": "^1.4.1",
    "colors": "^ v1.2.1",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "crypto-js": "^3.1.9-1",
    "crypto-rand": "^0.0.2",
    "express": "^4.15.2",
    "forever": "^0.15.3",
    "fs-extra": "^3.0.0",
    "klaw": "^1.3.1",
    "nedb": "^1.8.0",
    "webtorrent": "^v0.98.18",
    "request": "^2.81.1"
  },
  "devDependencies": {
    "chai": "^4.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0"
  },
  "standard": {
    "ignore": [
      "require.js"
    ],
    "globals": [
      "__base",
      "__config",
      "__DBtoken",
      "__workingDir",
      "$",
      "it",
      "describe",
      "confirm",
      "prompt",
      "requirejs",
      "Storage",
      "App"
    ]
  }
}
